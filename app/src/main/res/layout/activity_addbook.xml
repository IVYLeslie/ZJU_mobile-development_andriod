<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="74dp"
        android:text="请输入ISBN号码"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_addbook_find"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="46dp"
        android:text="查询"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/button_addbook_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="90dp"
        android:enabled="false"
        android:text="添加"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_addbook_find"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/text_bookname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="108dp"
        android:layout_marginBottom="110dp"
        android:text="书名"
        app:layout_constraintBottom_toBottomOf="@+id/text_publish_result"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_addbook_find" />

    <TextView
        android:id="@+id/text_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:text="作者"
        app:layout_constraintStart_toStartOf="@+id/text_bookname"
        app:layout_constraintTop_toBottomOf="@+id/text_bookname" />

    <TextView
        android:id="@+id/text_publish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="69dp"
        android:layout_marginTop="37dp"
        android:text="出版社"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_author" />

    <TextView
        android:id="@+id/text_publishyear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="32dp"
        android:text="出版年份"
        app:layout_constraintStart_toStartOf="@+id/text_publish"
        app:layout_constraintTop_toBottomOf="@+id/text_publish" />

    <TextView
        android:id="@+id/text_author_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:text="无"
        app:layout_constraintStart_toStartOf="@+id/text_bookname_result"
        app:layout_constraintTop_toBottomOf="@+id/text_bookname_result" />

    <TextView
        android:id="@+id/text_publishyear_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="无"
        app:layout_constraintStart_toStartOf="@+id/text_publish_result"
        app:layout_constraintTop_toBottomOf="@+id/text_publish_result" />

    <TextView
        android:id="@+id/text_bookname_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="20dp"
        android:text="无"
        app:layout_constraintEnd_toStartOf="@+id/button_addbook_add"
        app:layout_constraintTop_toBottomOf="@+id/button_addbook_add" />

    <TextView
        android:id="@+id/text_publish_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:text="无"
        app:layout_constraintStart_toStartOf="@+id/text_author_result"
        app:layout_constraintTop_toBottomOf="@+id/text_author_result" />

</androidx.constraintlayout.widget.ConstraintLayout>